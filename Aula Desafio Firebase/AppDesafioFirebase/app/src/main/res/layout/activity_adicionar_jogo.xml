<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdicionarJogoActivity">

    <ImageView
        android:id="@+id/imgJogoDetalhes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/kratos"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txtNomeJogoDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Jogo"
        android:textColor="@color/colorBrancoFundo"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@id/imgJogoDetalhes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/txtNomeJogoDetalhes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPretoFonte"
        android:text="Nome Jogo"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgJogoDetalhes" />

    <TextView
        android:id="@+id/txtAnoJogoDetalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Lançamento AnoJogo"
        android:textColor="@color/colorCinzaFonte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNomeJogoDetalhes2" />

    <TextView
        android:id="@+id/txtDescricaoDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAnoJogoDetalhes"
        android:layout_margin="10dp"
        android:text="Descrição do jogo"
        android:ellipsize="end"
        android:maxLines="20"
        android:textColor="@color/colorCinzaFonte"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditarJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorVermelhoBotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

</androidx.constraintlayout.widget.ConstraintLayout>